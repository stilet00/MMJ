---
import Layout from "../layouts/Layout.astro";
import background from "../assets/background.svg";

// Import all JPGs from the assets folder (eager to immediately get their URLs)
const modules = import.meta.glob<string>("../assets/*.jpg", { eager: true, query: "?url", import: "default" });

// Build array of { number, title, src }
const images = Object.entries(modules)
	.map(([path, url]) => {
		const file = path.split("/").pop(); // e.g. "17-Calavera.jpg"
		const name = file?.replace(/\.jpg$/, ""); // "17-Calavera"
		const [number, rawTitle] = name?.split("-", 2) ?? ["", ""]; // ["17", "Calavera"]
		const title = rawTitle.replace(/_/g, " ");
		return { number, title, src: url };
	})
	.sort((a, b) => Number(a.number) - Number(b.number));
---

<Layout>
	<img id="background" src={background.src} alt="" fetchpriority="high" />

	<main class="page">
		<header class="page-header">
			<h1>Monster Jam Truck Gallery</h1>
			<p>
				Browse and search a high-quality gallery of Monster Jam trucks by starting number and
				name.
			</p>
		</header>

		<div class="search-container">
			<input id="search" type="text" placeholder="Search by number…" />
		</div>

		<div id="gallery">
			{images.map((image) => (
				<div class="image-card" data-number={image.number}>
					<img src={image.src} alt={`#${image.number} — ${image.title}`} />
					<p>#{image.number} — {image.title}</p>
				</div>
			))}
		</div>
	</main>

	<script is:inline>
		const input = document.getElementById("search");
		const cards = document.querySelectorAll(".image-card");
		if (input) {
			input.addEventListener("input", () => {
				const q = input.value.trim();
				cards.forEach((card) => {
					const num = card.dataset.number ?? "";
					card.style.display = num.includes(q) ? "" : "none";
				});
			});
		}
	</script>
</Layout>


<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(90px);
		transform: scale(1.05);
		opacity: 0.9;
		pointer-events: none;
	}

	.page {
		position: relative;
		padding-top: 3rem;
		min-height: 100vh;
		backdrop-filter: blur(10px);
	}

	.page-header {
		text-align: center;
		padding: 2.5rem 1.5rem 0.5rem;
		color: #111827;
	}

	.page-header h1 {
		margin: 0 0 0.65rem;
		font-size: 2.2rem;
		font-weight: 800;
		letter-spacing: 0.06em;
		text-transform: uppercase;
		color: #111827;
	}

	.page-header p {
		margin: 0;
		max-width: 640px;
		margin-left: auto;
		margin-right: auto;
		font-size: 0.98rem;
		color: #4b5563;
	}

	.search-container {
		display: flex;
		justify-content: center;
		margin: 2rem 0 1.5rem;
		padding: 0 1.5rem 2rem;
	}

	#search {
		width: 100%;
		max-width: 420px;
		padding: 0.8rem 1.1rem;
		font-size: 1rem;
		border-radius: 9999px;
		border: 1px solid rgba(15, 23, 42, 0.18);
		background: rgba(255, 255, 255, 0.9);
		box-shadow:
			0 10px 40px rgba(15, 23, 42, 0.18),
			0 0 0 1px rgba(255, 255, 255, 0.7) inset;
		transition:
			border-color 160ms ease-out,
			box-shadow 160ms ease-out,
			transform 120ms ease-out,
			background-color 160ms ease-out;
	}

	#search::placeholder {
		color: rgba(100, 116, 139, 0.8);
	}

	#search:focus {
		outline: none;
		border-color: rgba(59, 130, 246, 0.9);
		box-shadow:
			0 14px 46px rgba(59, 130, 246, 0.18),
			0 0 0 1px rgba(255, 255, 255, 0.85) inset;
		transform: translateY(-1px);
		background: rgba(255, 255, 255, 1);
	}

	/* responsive gallery */
	#gallery {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
		gap: 1.5rem;
		padding: 0 1.5rem 2.5rem;
	}

	/* limit card max-width on medium+ screens so single result doesn't stretch */
	@media (min-width: 640px) {
		.image-card {
			max-width: 320px;
		}
	}

	.image-card {
		display: flex;
		flex-direction: column;
		background: rgba(255, 255, 255, 0.96);
		border-radius: 16px;
		overflow: hidden;
		box-shadow:
			0 6px 26px rgba(15, 23, 42, 0.16),
			0 0 0 1px rgba(255, 255, 255, 0.7);
		transform-origin: center center;
	}

	.image-card img {
		width: 100%;
		height: auto;
		display: block;
		transition: transform 200ms ease-out;
	}

	.image-card p {
		margin: 0;
		flex: 1;
		padding: 0.55rem 0.9rem;
		font-size: 0.86rem;
		font-weight: 650;
		text-transform: uppercase;
		letter-spacing: 0.55px;
		background: linear-gradient(135deg, #1d4ed8 0%, #6d28d9 40%, #f97316 100%);
		color: white;
		display: block;
		width: 100%;
		box-sizing: border-box;
		border-bottom-left-radius: 16px;
		border-bottom-right-radius: 16px;
		transition: background-position 220ms ease-out;
		background-size: 160%;
		background-position: 0% 50%;
	}

	.image-card:hover img {
		transform: scale(1.04) translateY(-1px);
	}

	.image-card:hover p {
		background-position: 100% 50%;
	}

	/* scroll-driven reveal — pure CSS (Chrome 115+, Edge 115+, Safari 18+) */
	@keyframes card-reveal {
		0% {
			transform: translateY(24px) scale(0.96);
		}
		100% {
			transform: translateY(0) scale(1);
		}
	}

	@supports (animation-timeline: view()) {
		.image-card {
			view-timeline-name: --card;
			view-timeline-axis: block;
			animation: card-reveal linear both;
			animation-timeline: view();
			animation-range: entry 0% entry 100%;
		}
	}

	@media (prefers-reduced-motion: no-preference) {
		#background {
			animation: floatBackground 18s ease-in-out infinite alternate;
		}
	}

	@keyframes floatBackground {
		from {
			transform: translate3d(0, 0, 0) scale(1.02);
		}
		to {
			transform: translate3d(0, -12px, 0) scale(1.08) rotate(0.6deg);
		}
	}

	/* mobile tweaks */
	@media (max-width: 480px) {
		#search {
			max-width: 95%;
			box-shadow:
				0 8px 30px rgba(15, 23, 42, 0.16),
				0 0 0 1px rgba(255, 255, 255, 0.7) inset;
		}

		#gallery {
			gap: 1.05rem;
			padding: 0 1rem 1.9rem;
		}

		.search-container {
			padding: 0 1rem 1.7rem;
			margin-top: 1.5rem;
		}

		.page-header h1 {
			font-size: 1.8rem;
		}
	}

</style>